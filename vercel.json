{
  "version": 2,
  "builds": [
    {
      "src": "api/login.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "build": {
    "env": {
      "CI": "false"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/login.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}